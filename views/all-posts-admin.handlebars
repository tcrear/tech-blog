<div class="all-posts">
  {{#each posts}}
    <a class="list-item-post" href="/dashboard/edit/{{id}}">
      <span>{{title}}</span>
      <span>{{format_date createdAt}}</span>
    </a>
  {{/each}}
</div>

<div class="post card">
  <div class="card-header">
    <h4>New Post</h4>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="form-input" />

    <label class="form-label" for="post-body">Body</label>
    <textarea name="post-body" class="form-input"></textarea>

    <button type="submit" class="btn">Post</button>
  </form>
</div>

<script src="/js/newpost.js"></script>